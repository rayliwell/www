---
import '@style/theme.scss'

interface Props {
  title: string
}

const { title } = Astro.props
const defaultTheme = 'blue'
---

<html class={defaultTheme} lang='en'>
  <head>
    <meta charset='utf-8' />
    <meta name='viewport' content='width=device-width' />
    <link id='themed-icon' rel='icon' />
    <script src='@utils/theme'></script>
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
